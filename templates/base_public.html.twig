<!DOCTYPE html>
<html lang="en" class="h-full bg-white">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Sports App{% endblock %}</title>
    
    {# Tailwind CSS #}
    <script src="https://cdn.tailwindcss.com"></script>
    
    {# Feather Icons #}
    <script src="https://unpkg.com/feather-icons"></script>
    
    {# Custom Styles #}
    {% block stylesheets %}{% endblock %}
</head>
<body class="h-full">
    <div class="min-h-full flex flex-col justify-center py-12 sm:px-6 lg:px-8 relative">
        {# Flash Messages #}
        {% for type, messages in app.flashes %}
            <div class="fixed top-4 right-4 z-50 w-full max-w-sm">
                {% for message in messages %}
                    <div class="{% if type == 'success' %}bg-green-50 border-l-4 border-green-400 text-green-700{% elseif type == 'error' %}bg-red-50 border-l-4 border-red-400 text-red-700{% else %}bg-blue-50 border-l-4 border-blue-400 text-blue-700{% endif %} p-4 shadow-lg" role="alert">
                        <p class="font-bold">{{ type|title }}</p>
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}

        {% block body %}{% endblock %}
    </div>

    {# Feather Icons Initialization #}
    <script>
        feather.replace();
    </script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>
