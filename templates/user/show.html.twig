{% extends 'base.html.twig' %}

{% block title %}My Profile - {{ parent() }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-2xl rounded-lg p-8">
        <h1 class="text-4xl font-display font-bold mb-8 text-black">{{ user.fullName ?? 'User Profile' }}</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white p-6 rounded-xl border border-nike-gray/20 hover:border-brand-blue/50 transition-all duration-300">
                <div class="flex items-center mb-4">
                    <i data-feather="user" class="h-8 w-8 text-brand-blue mr-3"></i>
                    <h2 class="text-xl font-display font-semibold text-black">Personal Information</h2>
                </div>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700">First Name</label>
                        <p class="mt-1 text-sm text-gray-900">{{ user.name }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Last Name</label>
                        <p class="mt-1 text-sm text-gray-900">{{ user.lastname }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Email</label>
                        <p class="mt-1 text-sm text-gray-900">{{ user.email }}</p>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700">Role</label>
                        <p class="mt-1 text-sm text-gray-900">
                            {% set roleMap = {
                                'ROLE_ATHLETE': 'Athlete',
                                'ROLE_COACH': 'Coach', 
                                'ROLE_MANAGER': 'Manager',
                                'ROLE_ADMIN': 'Administrator'
                            } %}
                            {{ roleMap[user.roles[0]] ?? 'Member' }}
                        </p>
                    </div>
                </div>
            </div>

            <div class="bg-white p-6 rounded-xl border border-nike-gray/20 hover:border-brand-blue/50 transition-all duration-300">
                <div class="flex items-center mb-4">
                    <i data-feather="settings" class="h-8 w-8 text-brand-blue mr-3"></i>
                    <h2 class="text-xl font-display font-semibold text-black">Profile Actions</h2>
                </div>
                <div class="space-y-4">
                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="w-full rounded-md bg-brand-blue text-white px-4 py-2 text-sm font-semibold hover:bg-blue-700 transition-colors flex items-center justify-center">
                        <i data-feather="edit" class="h-5 w-5 mr-2"></i>Edit Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
