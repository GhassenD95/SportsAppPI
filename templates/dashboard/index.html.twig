                    </div>
                    <div class="ml-5 w-0 flex-1">
                        <dl>
                            <dt class="truncate text-sm font-medium text-gray-500">Equipment</dt>
                            <dd>
                                <div class="text-lg font-medium text-gray-900">0</div>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-5 py-3">
                <div class="text-sm">
                    <a href="{{ path('app_equipment_index') }}" class="font-medium text-primary-600 hover:text-primary-500">View all</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 