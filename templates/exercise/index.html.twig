{% extends 'base.html.twig' %}

{% block title %}Exercise index{% endblock %}

{% block body %}
    <h1>Exercise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Target</th>
                <th>ApiId</th>
                <th>Instructions</th>
                <th>ImageUrl</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exercise in exercises %}
            <tr>
                <td>{{ exercise.id }}</td>
                <td>{{ exercise.name }}</td>
                <td>{{ exercise.target }}</td>
                <td>{{ exercise.apiId }}</td>
                <td>{{ exercise.instructions }}</td>
                <td>{{ exercise.imageUrl }}</td>
                <td>
                    <a href="{{ path('app_exercise_show', {'id': exercise.id}) }}">show</a>
                    <a href="{{ path('app_exercise_edit', {'id': exercise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_exercise_new') }}">Create new</a>
{% endblock %}
