<form method="post" action="{{ path('app_exercise_delete', {'id': exercise.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ exercise.id) }}">
    <button type="submit" class="px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
        <i data-feather="trash-2" class="inline-block mr-2 h-4 w-4"></i>Delete Exercise
    </button>
</form>
