{% extends 'base.html.twig' %}

{% block title %}Edit Exercise - {{ exercise.name | default('Unknown') }}{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-3xl mx-auto bg-white shadow-xl rounded-lg p-6 md:p-8">
            <div class="flex justify-between items-center mb-6">
                <h1 class="text-2xl font-semibold text-gray-800">Edit Exercise: <span class="text-indigo-600">{{ exercise.name | default('N/A') }}</span></h1>
                <a href="{{ path('app_exercise_index') }}" class="px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Back to List
                </a>
            </div>

            {{ include('exercise/_form.html.twig', {
                form: form, 
                button_label: 'Update Exercise',
                button_class: 'px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500'
            }) }}

            <div class="mt-8 pt-6 border-t border-gray-200">
                <h2 class="text-lg font-medium text-gray-700 mb-3">Delete Exercise</h2>
                <p class="text-sm text-gray-600 mb-4">Proceed with caution. This action cannot be undone.</p>
                {{ include('exercise/_delete_form.html.twig', { exercise: exercise }) }}
            </div>
        </div>
    </div>
{% endblock %}
