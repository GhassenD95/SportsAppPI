                                        <svg class="w-5 h-5 mr-3 {% if app.request.get('_route') starts with 'app_team_performance_' %}text-blue-600{% else %}text-gray-400{% endif %}" fill="none" stroke="currentColor" viewBox="0 0 24 24">
