{% extends 'frontoffice/base.html.twig' %}

{% block title %}Welcome to SportsApp{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <!-- Navigation Sidebar -->
    <div class="fixed inset-y-0 left-0 w-64 bg-white shadow-lg z-10">
        <div class="flex flex-col h-full">
            <!-- Logo/SportsApp Header -->
            <div class="flex items-center justify-center h-16 px-4 bg-gradient-to-r from-blue-600 to-blue-500">
                <h1 class="text-xl font-bold text-white">SportsApp</h1>
            </div>
            
            <!-- Navigation Items -->
            <nav class="flex-1 px-4 py-6 overflow-y-auto">
