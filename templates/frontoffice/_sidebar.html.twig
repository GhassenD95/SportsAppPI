                    <!-- Home -->
                    <li>
                        <a href="{{ path('app_home') }}" class="flex items-center p-3 rounded-lg transition-all duration-200 {% if app.request.get('_route') == 'app_home' %}bg-blue-50 text-blue-600 font-medium{% else %}text-gray-600 hover:bg-gray-100 hover:text-blue-600{% endif %}">
