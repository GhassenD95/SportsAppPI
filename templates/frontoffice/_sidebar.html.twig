                                <li>
                                    <a href="{{ path('app_match_event_index') }}" class="flex items-center p-3 rounded-lg transition-all duration-200 {% if app.request.get('_route') starts with 'app_match_event_' %}bg-blue-50 text-blue-600 font-medium{% else %}text-gray-600 hover:bg-gray-100 hover:text-blue-600{% endif %}">
