{% extends 'frontoffice/base.html.twig' %}

{% block title %}Welcome to SportsApp{% endblock %}

{% block stylesheets %}
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: {
                            50: '#f0f9ff',
                            100: '#e0f2fe',
                            200: '#bae6fd',
                            300: '#7dd3fc',
                            400: '#38bdf8',
                            500: '#0ea5e9',
                            600: '#0284c7',
                            700: '#0369a1',
                            800: '#075985',
                            900: '#0c4a6e',
                        },
                        secondary: {
                            50: '#f8fafc',
                            100: '#f1f5f9',
                            200: '#e2e8f0',
                            300: '#cbd5e1',
                            400: '#94a3b8',
                            500: '#64748b',
                            600: '#475569',
                            700: '#334155',
                            800: '#1e293b',
                            900: '#0f172a',
                        },
                    },
                },
            },
        }
    </script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="icon" type="image/x-icon" href="https://cdn-icons-png.flaticon.com/512/1165/1165800.png">
{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <div class="relative bg-gray-900 overflow-hidden">
        <div class="absolute inset-0 z-0">
            <img class="w-full h-full object-cover opacity-40" src="https://images.unsplash.com/photo-1517649763962-0c623066013b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="Athletes playing sports">
            <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-gray-900/70 to-gray-900/20"></div>
        </div>
        <div class="relative max-w-7xl mx-auto px-4 py-24 sm:py-32 sm:px-6 lg:px-8 z-10">
            <div class="text-center">
                <h1 class="text-5xl font-bold tracking-tight text-white sm:text-6xl lg:text-7xl">
                    <span class="block">Elevate Your Game</span>
                    <span class="block text-blue-400">with SportsApp</span>
                </h1>
                <p class="mt-6 text-xl text-blue-100 max-w-3xl mx-auto">
                    The ultimate platform for athletes, coaches, and sports enthusiasts.
                </p>
                <div class="mt-10 flex justify-center gap-4">
                    <a href="#" class="px-8 py-3 border border-transparent text-base font-medium rounded-full text-white bg-blue-600 hover:bg-blue-700 md:py-4 md:text-lg md:px-10 transition-all duration-200 hover:shadow-lg">
                        Get Started
                    </a>
                    <a href="#" class="px-8 py-3 border border-transparent text-base font-medium rounded-full text-blue-100 bg-blue-600/20 hover:bg-blue-600/30 md:py-4 md:text-lg md:px-10 transition-all duration-200">
                        Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- News and Announcements Section -->
    <div class="max-w-7xl mx-auto py-16 px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
            <span class="inline-block px-3 py-1 text-sm font-semibold text-blue-600 bg-blue-100 rounded-full mb-4">LATEST UPDATES</span>
            <h2 class="text-4xl font-bold text-gray-900">
                News & Announcements
            </h2>
            <div class="mt-4 h-1 w-20 bg-blue-500 mx-auto"></div>
        </div>
        
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
            {% for item in news %}
            <div class="group bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-gray-100">
                <!-- Card Image with Fallback -->
                <div class="h-48 bg-gray-200 overflow-hidden">
                    {% if item.image %}
                        <img class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" 
                             src="{{ item.image }}" 
                             alt="{{ item.title }}"
                             onerror="this.src='https://placehold.co/600x400/1a365d/ffffff?text=Sports+News'">
                    {% else %}
                        <img class="w-full h-full object-cover" 
                             src="https://placehold.co/600x400/1a365d/ffffff?text=Sports+News" 
                             alt="Sports placeholder">
                    {% endif %}
                    <div class="absolute top-4 right-4">
                        <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold {{ item.type == 'announcement' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' }}">
                            {{ item.type|title }}
                        </span>
                    </div>
                </div>
                
                <div class="p-6">
                    <div class="flex items-center text-sm text-gray-500 mb-3">
                        <svg class="w-4 h-4 mr-2 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        {{ item.date|date('F j, Y') }}
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">{{ item.title }}</h3>
                    <p class="text-gray-600 line-clamp-2 mb-4">{{ item.content }}</p>
                    <div class="flex items-center text-blue-600 font-medium text-sm group-hover:underline">
                        Read more
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>

    <!-- Quick Links Section -->
    <div class="bg-gray-50 py-16 border-t border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center mb-16">
                <span class="inline-block px-3 py-1 text-sm font-semibold text-blue-600 bg-blue-100 rounded-full mb-4">QUICK ACCESS</span>
                <h2 class="text-4xl font-bold text-gray-900">
                    Your Dashboard
                </h2>
                <div class="mt-4 h-1 w-20 bg-blue-500 mx-auto"></div>
            </div>
            
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin') }}" class="group bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-gray-100">
                    <div class="p-6">
                        <div class="flex items-center justify-center h-14 w-14 rounded-xl bg-blue-600 text-white mb-5 group-hover:bg-blue-700 transition-colors">
                            <i class="fas fa-cogs text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">Admin Dashboard</h3>
                        <p class="text-gray-600 mb-4">Access administrative tools and settings</p>
                        <div class="flex items-center text-blue-600 font-medium text-sm group-hover:underline">
                            Access now
                            <i class="fas fa-arrow-right ml-1"></i>
                        </div>
                    </div>
                </a>
                {% endif %}
                
                {% if is_granted('ROLE_COACH') %}
                <a href="{{ path('app_coach_dashboard') }}" class="group bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-gray-100">
                    <div class="p-6">
                        <div class="flex items-center justify-center h-14 w-14 rounded-xl bg-green-600 text-white mb-5 group-hover:bg-green-700 transition-colors">
                            <i class="fas fa-users text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-green-600 transition-colors">Coach Dashboard</h3>
                        <p class="text-gray-600 mb-4">Manage your team and training sessions</p>
                        <div class="flex items-center text-green-600 font-medium text-sm group-hover:underline">
                            Access now
                            <i class="fas fa-arrow-right ml-1"></i>
                        </div>
                    </div>
                </a>
                {% endif %}
                
                {% if is_granted('ROLE_MANAGER') %}
                <a href="{{ path('app_facility_index') }}" class="group bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-gray-100">
                    <div class="p-6">
                        <div class="flex items-center justify-center h-14 w-14 rounded-xl bg-indigo-600 text-white mb-5 group-hover:bg-indigo-700 transition-colors">
                            <i class="fas fa-building text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-indigo-600 transition-colors">Manage Facilities</h3>
                        <p class="text-gray-600 mb-4">View and manage sports facilities</p>
                        <div class="flex items-center text-indigo-600 font-medium text-sm group-hover:underline">
                            Access now
                            <i class="fas fa-arrow-right ml-1"></i>
                        </div>
                    </div>
                </a>
                
                <a href="{{ path('app_equipment_index') }}" class="group bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-gray-100">
                    <div class="p-6">
                        <div class="flex items-center justify-center h-14 w-14 rounded-xl bg-purple-600 text-white mb-5 group-hover:bg-purple-700 transition-colors">
                            <i class="fas fa-dumbbell text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-purple-600 transition-colors">Manage Equipment</h3>
                        <p class="text-gray-600 mb-4">View and manage sports equipment</p>
                        <div class="flex items-center text-purple-600 font-medium text-sm group-hover:underline">
                            Access now
                            <i class="fas fa-arrow-right ml-1"></i>
                        </div>
                    </div>
                </a>
                {% endif %}
                
                {% if is_granted('ROLE_ATHLETE') %}
                <a href="{{ path('app_athlete_dashboard') }}" class="group bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 border border-gray-100">
                    <div class="p-6">
                        <div class="flex items-center justify-center h-14 w-14 rounded-xl bg-blue-600 text-white mb-5 group-hover:bg-blue-700 transition-colors">
                            <i class="fas fa-user text-2xl"></i>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-blue-600 transition-colors">Athlete Dashboard</h3>
                        <p class="text-gray-600 mb-4">View your schedule and performance</p>
                        <div class="flex items-center text-blue-600 font-medium text-sm group-hover:underline">
                            Access now
                            <i class="fas fa-arrow-right ml-1"></i>
                        </div>
                    </div>
                </a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %} 