{% extends 'base.html.twig' %}

{% block title %}Facility{% endblock %}

{% block body %}
    <h1>Facility</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facility.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ facility.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ facility.location }}</td>
            </tr>
            <tr>
                <th>Image_url</th>
                <td>{{ facility.imageUrl }}</td>
            </tr>
            <tr>
                <th>Sports</th>
                <td>{{ facility.sports ? facility.sports|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_facility_index') }}">back to list</a>

    <a href="{{ path('app_facility_edit', {'id': facility.id}) }}">edit</a>

