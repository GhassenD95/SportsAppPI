<form method="post" action="{{ path('app_facility_delete', {'id': facility.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ facility.id) }}">
    <button type="submit" class="inline-flex items-center justify-center px-4 py-2.5 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-150 ease-in-out">
        <i data-feather="trash-2" class="h-4 w-4 mr-2"></i>
        Delete
    </button>
</form>
