{% extends 'base.html.twig' %}

{% block title %}Edit Facility - {{ facility.name }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-xl">
        <div class="flex justify-between items-center mb-8">
            <h1 class="text-3xl font-bold text-slate-800">Edit Facility: <span class="text-brand-blue">{{ facility.name }}</span></h1>
            <a href="{{ path('app_facility_index') }}" class="text-sm text-brand-blue hover:text-brand-blue-dark hover:underline flex items-center">
                <i data-feather="arrow-left" class="h-4 w-4 mr-1"></i> Back to list
            </a>
        </div>

        {{ include('facility/_form.html.twig', {
            'form': form,
            'button_label': 'Update Facility'
        }) }}

        <div class="mt-8 pt-6 border-t border-slate-200">
            <h2 class="text-xl font-semibold text-slate-700 mb-4">Delete Facility</h2>
            <p class="text-sm text-slate-600 mb-4">Deleting this facility is a permanent action and cannot be undone. Please be sure before proceeding.</p>
            {{ include('facility/_delete_form.html.twig', {
                'facility': facility
            }) }}
        </div>
    </div>
</div>
{% endblock %}
