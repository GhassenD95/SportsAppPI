{% extends 'frontoffice/base.html.twig' %}

{% block title %}Edit Profile - {{ parent() }}{% endblock %}

{% block body %}
<div class="space-y-10 divide-y divide-gray-900/10">
    <div class="grid grid-cols-1 gap-x-8 gap-y-8 md:grid-cols-3">
        <div class="px-4 sm:px-0">
            <h2 class="text-base font-semibold leading-7 text-gray-900">Profile</h2>
            <p class="mt-1 text-sm leading-6 text-gray-600">Update your profile information.</p>
        </div>

        <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2">
            {{ form_start(form, {'attr': {'class': 'px-4 py-6 sm:p-8'}}) }}
                <div class="grid max-w-2xl grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                    <div class="sm:col-span-3">
                        {{ form_label(form.name) }}
                        <div class="mt-2">
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>

                    <div class="sm:col-span-3">
                        {{ form_label(form.lastname) }}
                        <div class="mt-2">
                            {{ form_widget(form.lastname) }}
                            {{ form_errors(form.lastname) }}
                        </div>
                    </div>

                    <div class="sm:col-span-4">
                        {{ form_label(form.email) }}
                        <div class="mt-2">
                            {{ form_widget(form.email) }}
                            {{ form_errors(form.email) }}
                        </div>
                    </div>
                </div>
                <div class="mt-8 flex">
                    <button type="submit" class="rounded-md bg-primary-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-primary-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-primary-600">Save</button>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %} 