{% extends 'base.html.twig' %}

{% block title %}Edit TeamPerformance{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="bg-white shadow-2xl rounded-lg p-8">
        <h1 class="text-4xl font-display font-bold mb-8 text-black">Edit Team Performance</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-white p-6 rounded-xl border border-nike-gray/20 hover:border-brand-blue/50 transition-all duration-300">
                <div class="flex items-center mb-4">
                    <i data-feather="bar-chart-2" class="h-8 w-8 text-brand-blue mr-3"></i>
                    <h2 class="text-xl font-display font-semibold text-black">Performance Details</h2>
                </div>
                {{ include('team_performance/_form.html.twig', {'button_label': 'Update'}) }}
            </div>

            <div class="bg-white p-6 rounded-xl border border-nike-gray/20 hover:border-brand-blue/50 transition-all duration-300">
                <div class="flex items-center mb-4">
                    <i data-feather="settings" class="h-8 w-8 text-brand-blue mr-3"></i>
                    <h2 class="text-xl font-display font-semibold text-black">Actions</h2>
                </div>
                <div class="space-y-4">
                    <a href="{{ path('app_team_performance_index') }}" class="w-full rounded-md bg-gray-200 text-gray-800 px-4 py-2 text-sm font-semibold hover:bg-gray-300 transition-colors flex items-center justify-center">
                        <i data-feather="list" class="h-5 w-5 mr-2"></i>Back to List
                    </a>
                    {{ include('team_performance/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
