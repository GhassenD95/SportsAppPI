{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100">
    <div class="container mx-auto py-10 px-4">
        <div class="bg-white shadow-md rounded-lg p-6">
            <h1 class="text-3xl font-bold mb-6 text-gray-800">Welcome to Your Dashboard</h1>
            
            {% if user_role and user_email %}
                <div class="mb-4 flex justify-between items-center">
                    <div>
                        <p class="text-lg text-gray-600">Logged in as: 
                            <span class="font-semibold text-blue-600">{{ user_role }}</span>
                        </p>
                        <p class="text-sm text-gray-500">Email: {{ user_email }}</p>
                    </div>
                    <div>
                        <a href="{{ path('app_logout') }}" class="bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded inline-flex items-center">
                            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M3 3a1 1 0 00-1 1v12a1 1 0 102 0V4a1 1 0 00-1-1zm10.293 1.293a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 01-1.414-1.414L14.586 11H7a1 1 0 110-2h7.586l-1.293-1.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                            </svg>
                            Logout
                        </a>
                    </div>
                </div>
            {% endif %}

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                {% if is_granted('ROLE_COACH') %}
                    <div class="bg-blue-50 p-4 rounded-lg">
                        <h2 class="text-xl font-semibold text-blue-800 mb-3">Coach Actions</h2>
                        <ul class="list-disc list-inside text-blue-600">
                            <li>Manage Training Sessions</li>
                            <li>View Player Performance</li>
                            <li>Create Training Plans</li>
                        </ul>
                    </div>
                {% endif %}

                {% if is_granted('ROLE_MANAGER') %}
                    <div class="bg-green-50 p-4 rounded-lg">
                        <h2 class="text-xl font-semibold text-green-800 mb-3">Manager Actions</h2>
                        <ul class="list-disc list-inside text-green-600">
                            <li>Team Management</li>
                            <li>Tournament Planning</li>
                            <li>Resource Allocation</li>
                        </ul>
                    </div>
                {% endif %}

                {% if is_granted('ROLE_ATHLETE') %}
                    <div class="bg-purple-50 p-4 rounded-lg">
                        <h2 class="text-xl font-semibold text-purple-800 mb-3">Athlete Dashboard</h2>
                        <ul class="list-disc list-inside text-purple-600">
                            <li>Personal Performance</li>
                            <li>Training Schedule</li>
                            <li>Injury Tracking</li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
